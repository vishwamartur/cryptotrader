# AI-Powered Crypto Trading Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DELTA EXCHANGE API CONFIGURATION
# =============================================================================
# Get your API credentials from: https://www.delta.exchange/app/api-management
DELTA_EXCHANGE_API_KEY=your_delta_exchange_api_key_here
DELTA_EXCHANGE_API_SECRET=your_delta_exchange_api_secret_here

# Delta Exchange API Base URL (Production)
DELTA_EXCHANGE_BASE_URL=https://api.delta.exchange

# Delta Exchange WebSocket URL
NEXT_PUBLIC_DELTA_WS_URL=wss://socket.india.delta.exchange

# =============================================================================
# PERPLEXITY AI API CONFIGURATION
# =============================================================================
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Perplexity API Base URL
PERPLEXITY_API_BASE_URL=https://api.perplexity.ai

# Perplexity Model Configuration
PERPLEXITY_MODEL=llama-3.1-sonar-large-128k-online
PERPLEXITY_MAX_TOKENS=4096

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Default trading parameters
DEFAULT_RISK_TOLERANCE=moderate
DEFAULT_MAX_POSITION_SIZE=1000
DEFAULT_STOP_LOSS_PERCENTAGE=2.0
DEFAULT_TAKE_PROFIT_PERCENTAGE=5.0

# Portfolio limits
MAX_DAILY_LOSS_LIMIT=500
MAX_POSITION_COUNT=10
MAX_LEVERAGE=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# API Rate limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_MS=60000

# Session configuration
SESSION_SECRET=your_secure_session_secret_here
JWT_SECRET=your_jwt_secret_key_here

# =============================================================================
# DATABASE CONFIGURATION (Optional - for trade history)
# =============================================================================
# Uncomment and configure if you want to store trade history
# DATABASE_URL=postgresql://username:password@localhost:5432/crypto_trader
# REDIS_URL=redis://localhost:6379

# Demo Mode (Set to true for testing without real API keys)
NEXT_PUBLIC_DEMO_MODE=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Webhook URLs for alerts (optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Environment mode
NODE_ENV=development

# Next.js configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Enable debug mode for detailed logging
DEBUG_MODE=false

# Mock trading mode (for testing without real trades)
MOCK_TRADING_MODE=true

# =============================================================================
# ADVANCED FEATURES
# =============================================================================
# Enable experimental features
ENABLE_HFT_ENGINE=false
ENABLE_DEFI_INTEGRATION=false
ENABLE_ML_PREDICTIONS=false
ENABLE_RL_AGENT=false

# TensorFlow.js model URLs (if ML is enabled)
TENSORFLOW_MODEL_URL=https://your-model-storage.com/model.json

# DeFi configuration (if DeFi integration is enabled)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org

# Optional API Keys for Enhanced Features
SANTIMENT_API_KEY=your_santiment_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Backup configuration
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_STORAGE_PATH=./backups

# Emergency stop configuration
EMERGENCY_STOP_ENABLED=true
EMERGENCY_CONTACT_EMAIL=your_emergency_email@example.com
