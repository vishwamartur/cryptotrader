# AI-Powered Crypto Trading Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# Delta Exchange API (Optional - for live trading)
# Get your API credentials from: https://www.delta.exchange/app/api-management
DELTA_EXCHANGE_API_KEY=your_api_key_here
DELTA_EXCHANGE_API_SECRET=your_api_secret_here

# Perplexity AI API (Required for AI features)
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# WebSocket URLs
NEXT_PUBLIC_DELTA_WS_URL=wss://socket.india.delta.exchange

# Demo Mode (Set to true for testing without real API keys)
NEXT_PUBLIC_DEMO_MODE=true

# Database Configuration (Optional - for production)
DATABASE_URL=postgresql://username:password@localhost:5432/cryptotrader

# Application Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional API Keys for Enhanced Features
SANTIMENT_API_KEY=your_santiment_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here
